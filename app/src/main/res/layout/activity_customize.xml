<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.thienphan.timesheet.View.CustomizeActivity">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:scrollbars="vertical"
        android:id="@+id/rcv_custom_ts"/>
    <com.rilixtech.materialfancybutton.MaterialFancyButton
        android:id="@+id/btn_delete_ts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:padding="10dp"
        fancy:mfb_radius="10dp"
        fancy:mfb_focusColor="@android:color/darker_gray"
        fancy:mfb_defaultColor="@android:color/holo_red_light"
        fancy:mfb_text="XoaÌ" />
</RelativeLayout>
