<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical"
    tools:context="com.project.thienphan.timesheet.View.NotificationDetails">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_gray"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/tv_notification_detail_title"
                android:text="Anh van can barn"
                android:padding="5dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_margin="5dp"
                android:background="@drawable/bg_last_comment"
                android:textColor="#2E7D32"
                android:id="@+id/tv_notification_detail_message"
                android:text="test"
                android:padding="12dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <com.rilixtech.materialfancybutton.MaterialFancyButton
        android:id="@+id/btn_notification_detail_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        fancy:mfb_defaultColor="@color/colorPrimary"
        fancy:mfb_focusColor="@color/bg_gray"
        fancy:mfb_radius="5dp"
        fancy:mfb_text="Quay láº¡i"
        fancy:mfb_textColor="@android:color/white"
        fancy:mfb_textSize="14dp" />
</LinearLayout>
