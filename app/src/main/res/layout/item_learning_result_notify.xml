<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_gray"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"
            android:id="@+id/tv_item_learning_result_sub_title"
            android:padding="15dp"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:id="@+id/img_item_learning_result_modal"
            android:src="@drawable/ic_keyboard_arrow_down_black_36dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:animateLayoutChanges="true"
        android:id="@+id/ln_item_learning_result_modal"
        android:orientation="vertical">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:id="@+id/rcv_item_learning_result_notify"
            android:scrollbars="vertical"></android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/edt_parent_message"
                android:paddingLeft="3dp"
                android:layout_marginLeft="10dp"
                android:hint="Nội dung"
                android:textColor="@color/colorPrimary"/>

            <com.rilixtech.materialfancybutton.MaterialFancyButton
            android:id="@+id/btn_parent_send_message"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:padding="5dp"
            fancy:mfb_defaultColor="#64DD17"
            fancy:mfb_focusColor="@color/bg_gray"
            fancy:mfb_radius="5dp"
            fancy:mfb_text="Phản hồi"
            fancy:mfb_textColor="@android:color/white"
            fancy:mfb_textSize="14dp" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"/>
</LinearLayout>