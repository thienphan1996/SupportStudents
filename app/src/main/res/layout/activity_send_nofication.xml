<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.project.thienphan.teacher.View.SendNofication">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="80"
            android:id="@+id/edt_notification_title"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/edt_notification_input"
            android:padding="10dp"
            android:hint="Tiêu đề"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:maxLength="150"
            android:id="@+id/edt_notification_message"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:inputType="textMultiLine"
            android:background="@drawable/edt_notification_input"
            android:padding="10dp"
            android:hint="Nội dung"/>
    </LinearLayout>

    <com.rilixtech.materialfancybutton.MaterialFancyButton
        android:id="@+id/btn_notification_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:padding="20dp"
        fancy:mfb_radius="5dp"
        fancy:mfb_focusColor="@android:color/darker_gray"
        fancy:mfb_defaultColor="@color/colorPrimary"
        fancy:mfb_text="Gửi" />
</RelativeLayout>
