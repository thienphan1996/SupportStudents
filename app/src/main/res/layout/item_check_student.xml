<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ln_item_check_student"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/img_item_check_student"
                android:background="@drawable/bg_img_check_student"
                android:src="@drawable/ctu_logo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:id="@+id/tv_item_check_student_code"
                android:textColor="@color/bg_friday"
                android:textStyle="italic"
                android:textSize="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_item_name_check_student"
                android:text="Phan Hữu Thiện"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="10dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>